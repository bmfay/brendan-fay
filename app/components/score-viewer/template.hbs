{{#if isPreview}}
  {{#link-to 'main.music.show' composition.id}}
    {{score-viewer/score
      sortedPages=sortedPages
      showExtraBlankPage=showExtraBlankPage
      isPlaying=isPlaying
      isPreview=isPreview
      pageHeight=300
      class=scoreClass}}
  {{/link-to}}
{{else}}
  {{score-viewer/score
    sortedPages=sortedPages
    showExtraBlankPage=showExtraBlankPage
    isPlaying=isPlaying
    isPreview=isPreview
    pageHeight=maxAvailHeight
    class=scoreClass}}
{{/if}}
{{#if (and composition.recording (not isPreview))}}
  {{audio-player
    recording=composition.recording
    handleTimeUpdate=(action 'handleRecordingTimeUpdate')
    handlePlay=(action 'handleRecordingPlay')
    handleStop=(action 'handleRecordingStop')}}
{{/if}}
